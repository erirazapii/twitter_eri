<div class="row">
  <aside class="span4">
    <section>
	    <h1>
		  <%= profile_image_for @user %>
		  <%= @user.name %>
		</h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.tweets.any? %>
      <h3>Tweets (<%= @user.tweets.count %>)</h3>
      <ol class="microposts">
        <%= render @tweets %>
      </ol>
      <%= will_paginate @tweets %>
    <% end %>
  </div>
</div>
		


